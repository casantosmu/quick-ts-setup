{
  "extends": ["xo"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": ["xo-typescript"]
    },
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended", "plugin:jest/style"]
    },
    {
      "files": ["*"],
      "extends": ["prettier"]
    }
  ],
  "ignorePatterns": ["build"],
  "root": true
}
