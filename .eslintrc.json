{
  "extends": ["xo"],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "extends": ["xo-typescript"]
    },
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended", "plugin:jest/style"]
    },
    {
      "files": ["*"],
      "extends": ["prettier"]
    }
  ],
  "ignorePatterns": ["build"],
  "root": true
}
