{
  "name": "quick-ts-setup",
  "description": "Quick TypeScript setup for projects",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Carlos Santos",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "build": "tsc",
    "dev": "nodemon --watch src --exec node --loader ts-node/esm --inspect src/index.ts",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.57.0",
    "nodemon": "^2.0.22",
    "prettier": "3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
